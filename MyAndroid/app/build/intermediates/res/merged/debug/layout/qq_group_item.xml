<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:gravity="center|left"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/group_indicator"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bird_1" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/group_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="@string/num_8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bias" />

    <TextView
        android:id="@+id/group_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num_9" />

</LinearLayout><!-- From: file:/E:/learn/MyAndroid/app/src/main/res/layout/qq_group_item.xml -->