<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/showNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:padding="4dip"
        android:text="@string/showNotification" />

    <Button
        android:id="@+id/cancelNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:padding="4dip"
        android:text="@string/cancelNotification" />

    <Button
        android:id="@+id/showCustomNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:padding="4dip"
        android:text="@string/showCustomNotification" />

    <Button
        android:id="@+id/cancelCustomNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:padding="4dip"
        android:text="@string/cancelCustomNotification" />

    <Button
        android:id="@+id/showPopupWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:padding="4dip"
        android:text="@string/showPopupWindow" />

</LinearLayout><!-- From: file:/E:/chen/AndroidLearing/MyAndroid/app/src/main/res/layout/test_notification.xml -->