<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pro_name"
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="@string/action_settings" 
        android:textColor="@color/black_text_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

         <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:singleLine="true"
            android:text="@string/RMB"
            android:textColor="@color/common_grey_word" />
        
        <TextView
            android:id="@+id/pro_price"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/action_settings"
            android:textColor="@color/red_normal" />

        <TextView
            android:id="@+id/pro_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/action_settings"
            android:textColor="@color/common_grey_word" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/chen/AndroidLearing/MyAndroid/app/src/main/res/layout/parse_json_item.xml -->