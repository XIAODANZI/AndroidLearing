<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_sex0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/sex" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@id/textView_sex0"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/textView_sex0"
            android:background="@color/divider_color" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/rbtn_0" >

        <RadioButton
            android:id="@id/rbtn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male" />

        <RadioButton
            android:id="@id/rbtn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_sex1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/hobby" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@id/textView_sex1"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/textView_sex1"
            android:background="@color/divider_color" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/checkbox_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:button="@drawable/checkbuttonbg"
        android:text="@string/hobby_0" />

    <CheckBox
        android:id="@+id/checkbox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:button="@drawable/checkbuttonbg"
        android:text="@string/hobby_1" />

    <CheckBox
        android:id="@+id/checkbox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:button="@drawable/checkbuttonbg"
        android:text="@string/hobby_2" />

</LinearLayout><!-- From: file:/E:/learn/MyAndroid/app/src/main/res/layout/test_radiongroup_checkbutton.xml -->