<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:focusable="true"
        android:text="@string/inner" />

    <Button
        android:id="@+id/btn_innerMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:focusable="true"
        android:text="@string/innerMember" />

    <Button
        android:id="@+id/btn_anonymousInner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:focusable="true"
        android:text="@string/anonymousInner" />

    <Button
        android:id="@+id/btn_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:focusable="true"
        android:text="@string/activity" />

    <Button
        android:id="@+id/btn_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/btn_background"
        android:focusable="true"
        android:onClick="xmlClick"
        android:text="@string/xml" />

