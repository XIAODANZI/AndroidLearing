<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_bol_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bol_blue" />

    <LinearLayout
        android:id="@+id/lv_content_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_vertical"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="@string/vertical" />

        <Button
            android:id="@+id/btn_parabola"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="@string/parabola" />

        <Button
            android:id="@+id/btn_fadeout_del"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="@string/fadeOutDel" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/learn/MyAndroid/app/src/main/res/layout/test_value_animator.xml -->