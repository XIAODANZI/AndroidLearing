<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/progressbar0" />

    <ProgressBar
        android:id="@+id/defaultProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:max="100"
        android:progress="20"
        android:secondaryProgress="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/progressbar1" />

    <ProgressBar
        android:id="@+id/customProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar_bg"
        android:secondaryProgress="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/seekbar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:progressDrawable="@drawable/progressbar_bg"
        android:thumb="@drawable/seekbar_thumb_bg"
        android:thumbOffset="0dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/defaultRatingBar" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="20"
        android:numStars="5"
        android:progress="1"
        android:stepSize="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/customRatingBar" />

    <RatingBar
        android:id="@+id/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:max="10"
        android:numStars="5"
        android:progress="2"
        android:progressDrawable="@drawable/ratingbar_bg2"
        android:stepSize="0.5" />

</LinearLayout><!-- From: file:/E:/learn/MyAndroid/app/src/main/res/layout/test_progressbar.xml -->