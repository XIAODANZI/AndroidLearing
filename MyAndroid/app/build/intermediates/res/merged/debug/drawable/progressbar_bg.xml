<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 自定义进度条样式 -->
    <!-- 定义背景层 -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle" >
            <corners android:radius="12dip" />

            <solid android:color="@color/common_white" />

            <stroke
                android:dashGap="3dip"
                android:dashWidth="5dip"
                android:width="0.5dip"
                android:color="@color/red" />
        </shape>
    </item>

    <!-- 定义第二进度背景 -->

    <item android:id="@android:id/secondaryProgress">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="left" >
            <shape android:shape="rectangle" >
                <corners android:radius="12dip" />

                <solid android:color="@color/blue_normal" />

                <stroke
                    android:dashGap="3dip"
                    android:dashWidth="5dip"
                    android:width="0.5dip"
                    android:color="@color/red" />
            </shape>
        </clip>
    </item>
    <!-- 定义最上层样式，即进度条 -->
    <item>
        <clip
            android:clipOrientation="horizontal"
            android:gravity="left" >
            <shape android:shape="rectangle" >
                <corners android:radius="12dip" />

                <solid android:color="@color/green" />

                <stroke
                    android:dashGap="3dip"
                    android:dashWidth="5dip"
                    android:width="0.5dip"
                    android:color="@color/red" />
            </shape>
        </clip>
    </item>

</layer-list><!-- From: file:/E:/chen/AndroidLearing/MyAndroid/app/src/main/res/drawable/progressbar_bg.xml -->